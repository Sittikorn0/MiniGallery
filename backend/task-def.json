{
  "family": "mini-gallery-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "mini-gallery-container",
      "image": "public.ecr.aws/g9k8y8q1/mini-gallery-backend:latest",
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PORT",
          "value": "5000"
        },
        {
          "name": "DATABASE_URL",
          "value": "mongodb+srv://dev:00000@database.u6ymb2g.mongodb.net/STORAGE?retryWrites=true&w=majority"
        }
      ]
    }
  ],
  "executionRoleArn": "arn:aws:iam::096438464307:role/ecsTaskExecutionRole"
}
